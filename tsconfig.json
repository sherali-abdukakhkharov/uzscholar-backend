{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2019",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"incremental": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"paths": {
			"@shared/*": ["src/shared/*"]
		}
	}
}
